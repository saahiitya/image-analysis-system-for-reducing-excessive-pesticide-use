# CropGuard AI Platform Environment Variables

# Application Settings
APP_NAME=CropGuard AI Platform
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///./cropguard.db

# API Keys (Optional - for production features)
OPENWEATHER_API_KEY=your_openweather_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIRECTORY=data/uploads

# AI Model Paths
DISEASE_MODEL_PATH=models/disease_detection/crop_disease_model.h5
PESTICIDE_MODEL_PATH=models/pesticide_recommendation/pesticide_model.pkl

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True